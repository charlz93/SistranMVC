@model IEnumerable<TiendaOnline.MVC.Models.Producto>

@{ ViewBag.Title = "Index";}
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
            </div>
            <h2>Productos</h2>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.cantidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre_producto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Precio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Id_categoria)
                    </th>
                    @*<th>
            @Html.DisplayNameFor(model => model.Imagen)
        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre_producto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_categoria))
                </td>
                @*<td>
            @Html.DisplayFor(modelItem => item.Imagen)
        </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id_producto }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id_producto })
                </td>
            </tr>
                }

            </table>
            <div>
                @Html.ActionLink("Agregar una nuevo Producto", "Create")
            </div>

        </div>
    </div>
</div>

